{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LegionScript",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.legionscript",
				"match": "\\b(if|elseif|else|endif|while|endwhile|for|foreach|to|in|endfor|return)\\b"
			},
			{
				"name": "keyword.control.legionscript",
				"match": "\\b(pause|break|continue|stop|replay|not|and|or)\\b"
			},
			{
				"name": "keyword.operator.comparison.legionscript",
				"match": "\\b(==|!=|>=|<=|<|>)\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(itemamt|targettilerel|fly|attack|clickobject|bandageself)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(findtypelist|primaryabilityactive|secondaryabilityactive)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(usetype|useobject|moveitem|moveitemoffset)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(movetype|walk|turn|run|useskill|rename|shownames)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(equipitem|togglemounted)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(toggleautoloot)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(unsetalias|setalias|findalias|promptalias)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(contents|skill|x|y|z)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(str|dex|int|hits|maxhits|diffhits|stam|maxstam|mana|maxmana)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(followers|maxfollowers|gold|hidden|weight|maxweight|anycolor|any)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(dead|paralyzed|poisoned|mounted)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(criminal|enemy|friend|gray|innocent|invulnerable|murderer)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(findobject|distance|buffexists|property|findtype|findlayer)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(counttype|inparty|war)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(waitforgump|replygump|gumpexists|closegump|injournal|clearjournal)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(waitforjournal|poplist|pushlist|removelist|listexists|createlist)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(inlist|clearlist|info|ping|playmacro)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(logout|virtue|msg)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(yellmsg|sysmsg|chatmsg|emotemsg|promptmsg|timermsg|waitforprompt)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(cancelprompt|contextmenu|waitforcontext|ignoreboject|clearignorelist)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(setskill|getproperties|cast|waitfortarget)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(canceltarget|target|targettilerel)[!]?\\b"
			},
			{
				"name": "support.function.legionscript",
				"match": "\\b[@]?(settimer|removetimer|timerexpired|nearesthostile)[!]?\\b"
			},
			{
				"name": "support.constant.legionscript",
				"match": "\\b[\\']?(backpack|bank|lasttarget|lastobject)[\\']?\\b"
			},
			{
				"name": "support.constant.legionscript",
				"match": "\\b[\\']?(lefthand|mount|righthand|self|x|y|z|hits|maxhits|mana|maxmana)[\\']?\\b"
			},
			{
				"name": "comment.line.legionscript",
				"match": "\/\/.*"
			},
			{
				"name": "support.constant.legionscript",
				"match": "\\b(?i:(true|false))\\b"
			},

			{
				"name": "constant.numeric.legionscript",
				"match": "\\b[0-9a-fA-F]{1,16}\\b"
			},
			{
				"name": "constant.numeric.hexadecimal.legionscript",
				"match": "\\b0(x|X)[0-9a-fA-F]+\\b"
			},
			{
				"name": "string.quoted.single",
				"begin": "'",
				"end": "'"
			},
			{
				"name": "string.quoted.double",
				"begin": "\"",
				"end": "\""
			}
		]
		}
	},
	"scopeName": "source.legionscript"
}